@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-1 col-md-3"></div>

        <div class="col-10 col-md-6 text-center">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating m-1">
                    <input asp-for="Input.Username" class="form-control" placeholder="" />
                    <label asp-for="Input.Username"></label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating m-1">
                    <input asp-for="Input.Password" class="form-control" placeholder="" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating m-1">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                @if (Model.CaptchaOn)
                {
                    <div class="m-4 g-recaptcha" data-sitekey=@Model.GoogleReCaptchaKey></div>
                }
                <br />
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <partial name="_ValidationScriptsPartial" />
}
