@page
@model MyForum.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

@if (Model.Message != null)
{
    <div class="alet alert-info">@Model.Message</div>
}

<table class="table">
    @foreach (var user in Model.Users)
    {
    <tr>
        <td>@user.Nickname</td>
        <td>@user.PrestigePoints</td>
        <td class="text-justify">
            <a class="text-primary navbar-te"
               asp-page="./Details"
               asp-route-userId="@user.Id">
                Details
            </a>
            |
            <a class="text-primary navbar-text"
               asp-page="./Edit"
               asp-route-userId="@user.Id">
                Edit
            </a>
            |
            <a class="text-primary navbar-text"
               asp-page="./Delete"
               asp-route-userId="@user.Id">
                Delete
            </a>
        </td>
    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add new</a>